<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvStudentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:text="Student Name"
        android:textColor="@color/kiit_green"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:background="@drawable/edit_text_border"/>

    <TextView
        android:id="@+id/tvStudentRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStudentName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:text="Student Roll"
        android:textColor="@color/kiit_green"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:background="@drawable/edit_text_border"/>
    <Button
        android:id="@+id/btGenratePass"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/tvStudentRoll"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:visibility="visible"
        android:text="GENRATE PASS"
        android:textSize="40dp"
        android:textColor="@color/background_white"
        android:textStyle="bold"
        android:background="@drawable/button_border"/>
    <Button
        android:id="@+id/btGenratedPass"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@+id/tvStudentRoll"
        android:text="PASS GENRATED"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:drawableRight="@drawable/pass_generated"
        />
    <TextView
        android:id="@+id/tvcancelpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btGenratedPass"
        android:layout_alignRight="@id/btGenratedPass"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/kiit_green"
        android:text="Cancel Pass?"/>
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcancelpass"
        android:text="Date"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/kiit_green"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_border"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvcancelpass"
        android:layout_toRightOf="@+id/tvDate"
        android:text="Time"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/kiit_green"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_border" />
</RelativeLayout>